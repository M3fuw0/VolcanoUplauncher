<Window x:Class="Uplauncher.NumberOfDofusWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nombre de Fenêtres Dofus" Height="140" Width="300">
    <StackPanel>
        <!-- Interface utilisateur pour choisir le nombre de fenêtres -->
        <TextBlock Text="Sélectionnez le nombre de fenêtres Dofus à ouvrir :" Margin="10"/>
        <ComboBox x:Name="NumberComboBox" Margin="10">
            <!-- Items pour choisir le nombre -->
            <ComboBoxItem Content="1" IsSelected="True"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
            <ComboBoxItem Content="8"/>
            <!-- Ajoute d'autres options selon les besoins -->
        </ComboBox>
        <Button Content="Ouvrir" Margin="10" Click="OpenDofusWindows"/>
    </StackPanel>
</Window>